<div class="post-show row">
  <div class="col-md-8">
    <%=image_tag @post.image, class: 'image' %>
  </div>

  <div class="col-md-4">
    <div class="user_comment">
      <div class="row">
        <div class="col-lg-1">
          <div class="avatar_comment">
            <%if @post.user.avatar.attached? %>
              <%=link_to user_path(@post.user) do%>
                <%= image_tag @post.user.avatar %>
              <%end %>
            <%else%>
              <%=image_tag(asset_path("Avatar.png"))%>
            <%end %>
          </div>
        </div>
        <div class="col-lg-11">
          <%= link_to @post.user.name, user_path(@post.user), id: 'username_post_comment' %>
        </div>
      </div> 
    </div>
    <div class="description_post_comment">
      <div class="caption_post_comment">
        <% @post.caption.to_s.split(' ').each do |word| %>
          <% if word.start_with?('#') %>
            <%= link_to word, search_path(query: word) %>
          <%else %>
            <%= word %>
          <%end %>
        <% end %>
      </div>
  
      <%=render :partial => @post.comments%>
      <br>
      <%= form_for :comment ,url: post_comments_url(post_id: @post.id) do |f| %>
        <%= f.label :content %>
        <%= f.text_area :content, class: 'form-control' %>
        <%= f.submit "Save"%>
      <% end %>
    </div>
  </div>
</div>
